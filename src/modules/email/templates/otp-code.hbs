        border-radius: 4px;
        margin: 25px 0;
        font-weight: bold;
        display: inline-block;
      }
      .highlight {
        color: #d1243b;
        font-weight: bold;
      }
      .divider {
        border-top: 1px solid #eeeeee;
        margin: 25px 0;
      }
      .expiry-note {
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
      }
      @media only screen and (max-width: 600px) {
        .container {
          width: 100%;
        }
        .content {
          padding: 20px;
        }
        .otp-code {
          font-size: 28px;
          letter-spacing: 3px;
        }
